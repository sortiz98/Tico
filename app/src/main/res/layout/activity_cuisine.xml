<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F5F8"
        tools:context=".CuisineActivity">

        <TextView
            android:id="@+id/japaneseLabel"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="290dp"
            android:elevation="10dp"
            android:fontFamily="@font/belgrano"
            android:singleLine="true"
            android:text="Japanese"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/chinese"
            android:layout_width="160dp"
            android:layout_height="232dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="42dp"
            android:foreground="@drawable/chinese_cuisine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/indian" />

        <Button
            android:id="@+id/mexican"
            android:layout_width="160dp"
            android:layout_height="232dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="1dp"
            android:foreground="@drawable/mexican_cuisine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/japanese" />

        <Button
            android:id="@+id/japanese"
            android:layout_width="160dp"
            android:layout_height="232dp"
            android:layout_marginStart="43dp"
            android:layout_marginTop="145dp"
            android:foreground="@drawable/japanese_cuisine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/indian"
            android:layout_width="160dp"
            android:layout_height="232dp"
            android:layout_marginTop="145dp"
            android:layout_marginEnd="43dp"
            android:foreground="@drawable/indian_cuisine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/languageSelector"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rambla"
            android:text="@string/language_btn_txt"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#5B5B5B"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="410dp"
            android:layout_height="144dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/intro" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:layout_marginTop="70dp"
            android:background="#F5F6F8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/indianLabel"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="290dp"
            android:layout_marginEnd="42dp"
            android:elevation="10dp"
            android:fontFamily="@font/belgrano"
            android:text="Indian"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mexicanLabel"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginBottom="110dp"
            android:elevation="10dp"
            android:fontFamily="@font/belgrano"
            android:text="Mexican"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/chineseLabel"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="110dp"
            android:elevation="10dp"
            android:fontFamily="@font/belgrano"
            android:text="Chinese"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/rambla"
            android:text="authentic meals that taste like home"
            android:textColor="#5B5B5B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cuisineLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:fontFamily="@font/belgrano"
            android:text="Cuisines"
            android:textAlignment="center"
            android:textColor="#434242"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
